public class Osoba {
    private String imie;
    private String nazwisko;
    private int wiek;

    // Konstruktor przyjmujący wszystkie trzy parametry
    public Osoba(String imie, String nazwisko, int wiek) {
        this.imie = imie;
        this.nazwisko = nazwisko;
        this.wiek = wiek;
    }

    // Konstruktor przyjmujący tylko imię i nazwisko
    public Osoba(String imie, String nazwisko) {
        this(imie, nazwisko, 0); // Wywołanie pierwszego konstruktora z domyślną wartością 0 dla wieku
    }

    public static void main(String[] args) {
        Osoba osoba1 = new Osoba("Jan", "Kowalski", 30);
        Osoba osoba2 = new Osoba("Anna", "Nowak");

        System.out.println("Osoba 1: Imię: " + osoba1.imie + ", Nazwisko: " + osoba1.nazwisko + ", Wiek: " + osoba1.wiek);
        System.out.println("Osoba 2: Imię: " + osoba2.imie + ", Nazwisko: " + osoba2.nazwisko + ", Wiek: " + osoba2.wiek);
    }
}
