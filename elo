public class Osoba {
    private String imie;
    private static int licznik = 0; // Pole statyczne licznik

    // Konstruktor przyjmujący imię
    public Osoba(String imie) {
        this.imie = imie;
        licznik++; // Inkrementacja licznika przy tworzeniu nowej instancji Osoba
    }

    // Metoda do pobierania wartości licznika
    public static int pobierzLicznik() {
        return licznik;
    }

    public static void main(String[] args) {
        // Tworzenie kilku instancji klasy Osoba
        Osoba osoba1 = new Osoba("Jan");
        Osoba osoba2 = new Osoba("Anna");
        Osoba osoba3 = new Osoba("Marek");

        // Wyświetlenie wartości licznika
        System.out.println("Liczba utworzonych instancji Osoba: " + Osoba.pobierzLicznik());
    }
}
