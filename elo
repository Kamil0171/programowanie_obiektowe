public class Kwadrat {
    private double bok;

    // Konstruktor przyjmujący bok
    public Kwadrat(double bok) {
        this.bok = bok;
    }

    // Konstruktor bez argumentów, wywołuje pierwszy konstruktor z domyślną wartością boku (1)
    public Kwadrat() {
        this(1.0); // Wywołanie pierwszego konstruktora z domyślną wartością 1.0 dla boku
    }

    public static void main(String[] args) {
        Kwadrat kwadrat1 = new Kwadrat(5.0);
        Kwadrat kwadrat2 = new Kwadrat(); // Ten konstruktor używa domyślnej wartości boku (1.0)

        System.out.println("Kwadrat 1: Bok = " + kwadrat1.bok);
        System.out.println("Kwadrat 2: Bok = " + kwadrat2.bok);
    }
}
