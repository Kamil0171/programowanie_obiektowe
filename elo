public class GenericEquality {
    public static void main(String[] args) {
        // Przykładowe obiekty różnych typów
        String str1 = "Hello";
        String str2 = "Hello";
        boolean stringsEqual = isEqual(str1, str2);
        System.out.println("Are strings equal? " + stringsEqual);

        Integer num1 = 42;
        Integer num2 = 42;
        boolean numbersEqual = isEqual(num1, num2);
        System.out.println("Are numbers equal? " + numbersEqual);

        // Dodaj inne przykłady dla różnych typów obiektów

        // Przykład dla obiektów niestandardowych (np. tablice)
        int[] arr1 = {1, 2, 3};
        int[] arr2 = {1, 2, 3};
        boolean arraysEqual = isEqual(arr1, arr2);
        System.out.println("Are arrays equal? " + arraysEqual);
    }

    public static <T> boolean isEqual(T obj1, T obj2) {
        if (obj1 == null && obj2 == null) {
            return true;
        }
        return obj1 != null && obj1.equals(obj2);
    }
}
