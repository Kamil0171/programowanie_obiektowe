
public class Student {
    private String imie;
    private String nazwisko;
    private String kierunekStudiow;

    // Konstruktor przyjmujący wszystkie trzy parametry
    public Student(String imie, String nazwisko, String kierunekStudiow) {
        this.imie = imie;
        this.nazwisko = nazwisko;
        this.kierunekStudiow = kierunekStudiow;
    }

    // Konstruktor przyjmujący tylko imię i nazwisko
    public Student(String imie, String nazwisko) {
        this(imie, nazwisko, "Nieznany"); // Wywołanie pierwszego konstruktora z domyślną wartością "Nieznany" dla kierunku studiów
    }

    // Metoda do pobierania informacji o studencie
    public String getInfo() {
        return "Imię: " + imie + ", Nazwisko: " + nazwisko + ", Kierunek studiów: " + kierunekStudiow;
    }

    public static void main(String[] args) {
        Student student1 = new Student("Jan", "Kowalski", "Informatyka");
        Student student2 = new Student("Anna", "Nowak");

        System.out.println(student1.getInfo());
        System.out.println(student2.getInfo());
    }
}
